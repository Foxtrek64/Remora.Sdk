<Project Sdk="Microsoft.Build.NoTargets/3.5.6">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <NoWarn>NU5128</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <Title>Remora.Sdk</Title>
        <Description>Provides default properties and targets for Remora-style projects.</Description>
        <VersionPrefix>3.1.0</VersionPrefix>
        <PackageReleaseNotes>
            Add TargetNetStandard option to give users a smoother way to opt out of .NET Standard targeting.
        </PackageReleaseNotes>
        <IsPackable>true</IsPackable>
        <PackageTags>MSBuild;MSBuildSdk;Remora</PackageTags>
        <PackageType>MSBuildSdk</PackageType>
    </PropertyGroup>
</Project>
